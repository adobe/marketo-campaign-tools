{
  "name": "marketo-reporting-framework-toolkit",
  "productName": "Marketo Toolkit",
  "version": "1.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w && yarn start",
    "local": "yarn build && yarn start",
    "start": "electron-forge start",
    "debug": "yarn build && electron-forge start --inspect-electron",
    "dist": "yarn build && electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-mac": "electron-forge make --platform darwin",
    "make-win": "electron-forge make --platform win32"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "electron": "^17.1.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fast-csv": "^4.3.6",
    "https": "^1.0.0",
    "sirv-cli": "^2.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "config": {
            "name": "marketo_reporting_framework_toolkit"
          },
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "marketo-toolkit",
            "author": "Douglas Ross",
            "description": "A toolkit to support Marketo customers in creating and managing their campaign names and related URLs"
          },
          "platforms": [
            "win32"
          ]
        }
      ],
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "dmg"
        ]
      }
    }
  }
}
